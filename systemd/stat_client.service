[Unit]
Description=ServerStatus-Rust Client
After=network.target

[Service]
User=root
Group=root
Environment="RUST_BACKTRACE=1"
WorkingDirectory=/root/docker/ServerStatus
# EnvironmentFile=/root/docker/ServerStatus/.env
ExecStart=/root/docker/ServerStatus/stat_client -a "https://serverstatu.eu.org/report" -u h1 -p p1
ExecReload=/bin/kill -HUP $MAINPID
Restart=on-failure

[Install]
WantedBy=multi-user.target

